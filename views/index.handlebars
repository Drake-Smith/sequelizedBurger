<h1 class="title" id="titlepage">Eat A Burger!</h1>
<h3 class="title">It's good for you!*</h3>

<div class="row">
	<div class="col-md-4">
		<h2 class="header">Burgers To Eat</h2>
		<ul>
			{{#each burgers}}
				{{#unless this.devoured}}
				<li>
					{{this.id}}
					{{this.burger_name}}
					
					<form action="index/updateOne/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="devoured" value="true">
							<button type="submit">Devour It!</button>
					</form>
				</li>
				{{/unless}}
			{{/each}}
		</ul>
	</div>

	<div class="col-md-4">
		<img src="/assets/img/burger.png" alt="burger" height="200px" width="200px">

		<h2 class="header">Add A Burger</h2>
			<form class="create-update-form" action="index/insertOne" method="POST">
				<div class="form-group">
					<input type="text" id="ca" name="burger_name">
				</div>
				<button type="submit">Add Burger</button>
			</form>
	</div>

	<div class="col-md-4">
		<h2 class="header">Devoured Burgers</h2>
		<ul>
			{{#each burgers}}
				{{#if this.devoured}}
				<li>
					{{this.id}}
					{{this.burger_name}}
					
					<form action="index/updateOne/{{this.id}}?_method=PUT" method="POST">
		            	<input type="hidden" name="devoured" value="false">
		          	</form>
				</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
</div>
<br>
<br>
<br>
<p>*This claim is not backed by scientific evidence.</p>